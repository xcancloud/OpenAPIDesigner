{
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true
    }
  },
  "compilerOptions": {
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": false,
    "module": "ES2020",
    "moduleResolution": "bundler",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    // "types": [
    //   "./types/files.d.ts",
    //   "node"
    // ]
  },
  "include": ["core/**/*"]
}
